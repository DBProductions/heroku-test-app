{
    "parser": "esprima",
    "rules": {
      "no-mixed-operators": "off",
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "spaced-comment": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "no-var": "error",
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
}
